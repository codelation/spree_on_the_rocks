<%= address.full_name %>

<% unless address.company.blank? %>
  <%= address.company %>
<% end %>

<%= address.address1 %>

<% unless address.address2.blank? %>
  <%= address.address2 %>
<% end %>

<%= address.city %>
<%= address.state_text %>
<%= address.zipcode %>
<%= address.country.try(:name) %>

<% unless address.phone.blank? %>
  <%= Spree.t(:phone) %>
  <%= address.phone %>
<% end %>

<% unless address.alternative_phone.blank? %>
  <%= Spree.t(:alternative_phone) %>
  <%= address.alternative_phone %>
<% end %>
